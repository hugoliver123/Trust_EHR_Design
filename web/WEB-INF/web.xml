<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.controller.userLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/userLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addRecord</servlet-name>
        <servlet-class>com.controller.newRecord</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addRecord</servlet-name>
        <url-pattern>/newRecord</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>readRecord</servlet-name>
        <servlet-class>com.controller.readRecord</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>readRecord</servlet-name>
        <url-pattern>/readRecord</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>findRecordByUid</servlet-name>
        <servlet-class>com.controller.findRecordByUid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findRecordByUid</servlet-name>
        <url-pattern>/findRecordByUid</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>backMain</servlet-name>
        <servlet-class>com.controller.backMain</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>backMain</servlet-name>
        <url-pattern>/backMain</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>renameRecord</servlet-name>
        <servlet-class>com.controller.renameRecord</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>renameRecord</servlet-name>
        <url-pattern>/renameRecord</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>copyRecord</servlet-name>
        <servlet-class>com.controller.operationRecord.copyRecord</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>copyRecord</servlet-name>
        <url-pattern>/copyRecord</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>printRecord</servlet-name>
        <servlet-class>com.controller.operationRecord.printRecord</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>printRecord</servlet-name>
        <url-pattern>/printRecord</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>auLogin</servlet-name>
        <servlet-class>com.controller.auLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auLogin</servlet-name>
        <url-pattern>/auLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>checkSignature</servlet-name>
        <servlet-class>com.controller.checkSignature</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkSignature</servlet-name>
        <url-pattern>/checkSig</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
            <taglib-location>/WEB-INF/lib/tld/fmt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/lib/tld/c.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/sql</taglib-uri>
            <taglib-location>/WEB-INF/lib/tld/sql.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/x</taglib-uri>
            <taglib-location>/WEB-INF/lib/tld/x.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>

